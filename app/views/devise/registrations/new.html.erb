<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <fieldset class="columns is-multiline">
    <div class="column is-full">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="column is-half-tablet">
      <div class="field">
        <%= f.label :first_name, class: "label" %>
        <%= f.text_field :first_name, class: "input", autofocus: true, autocomplete: "given-name" %>
      </div>
    </div>

    <div class="column is-half-tablet">
      <div class="field">
        <%= f.label :last_name, class: "label" %>
        <%= f.text_field :last_name, class: "input", autocomplete: "family-name" %>
      </div>
    </div>

    <div class="column is-full">
      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, class: "input", autocomplete: "email" %>
      </div>
    </div>

    <div class="column is-full">
      <div class="field">
        <%= f.label :phone, class: "label" %>
        <%= f.text_field :phone, class: "input", autocomplete: "tel" %>
      </div>
    </div>

    <div class="column is-full">
      <div class="field">
        <%= f.label :contact_preference, "Send reminders via:", class: "label" %>
        <div class="select">
          <%= f.select :contact_preference, %w(phone email) %>
        </div>
      </div>
    </div>

    <div class="column is-full">
      <div class="field">
        <%= f.label :password, class: "label" %>
        <% if @minimum_password_length %>
          <div><em>(<%= @minimum_password_length %> characters minimum)</em></div>
        <% end %>
        <%= f.password_field :password, class: "input" %>
      </div>
    </div>

    <div class="column is-full">
      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, class: "input" %>
      </div>
    </div>

    <div class="column is-full has-actions">
      <%= f.submit "Sign up", class: "button is-primary" %>
    </div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
